{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/tests"
  ],
  "testMatch": [
    "**/tests/**/*.test.ts"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/*.test.ts",
    "!**/node_modules/**"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": {
          "jsx": "react-jsx"
        }
      }
    ]
  }
}
